<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vsundar17697.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="25dp">

        <TextView
            android:id="@+id/expr"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="35sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:columnCount="4"
            android:rowCount="5"
            android:visibility="visible">

            <Button
                android:id="@+id/open_p"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="("
                android:textSize="30sp" />

            <Button
                android:id="@+id/close_p"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text=")"
                android:textSize="30sp" />

            <Button
                android:id="@+id/percentage"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="%"
                android:textSize="30sp" />

            <Button
                android:id="@+id/clear"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="C"
                android:textSize="30sp" />

            <Button
                android:id="@+id/one"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/two"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/three"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="3"
                android:textSize="30sp" />

            <Button
                android:id="@+id/divide"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="/"
                android:textSize="30sp" />

            <Button
                android:id="@+id/four"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/five"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/six"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="6"
                android:textSize="30sp" />

            <Button
                android:id="@+id/multiply"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="*"
                android:textSize="30sp" />

            <Button
                android:id="@+id/seven"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="7"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eight"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="8"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nine"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/subtract"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="-"
                android:textSize="30sp" />

            <Button
                android:id="@+id/decimal"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="."
                android:textSize="30sp" />

            <Button
                android:id="@+id/zero"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/equal"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/dk"
                android:text="="
                android:textColor="@color/reallyWhite"
                android:textSize="30sp" />

            <Button
                android:id="@+id/add"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@color/white"
                android:text="+"
                android:textSize="30sp" />


        </GridLayout>
    </LinearLayout>

    <include layout="@layout/extra_operations" />

</android.support.design.widget.CoordinatorLayout>
